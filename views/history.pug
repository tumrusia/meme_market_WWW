html
    head
        title= title
        style
            include style.css
    body
        img(src='../../assets/' + url)
        table
            tr
                th date
                th price
            each moment in history
                tr
                    td #{moment.date}
                    td #{moment.price}

        form(action=url method="POST")
            input(type='text', placeholder='enter a new price', name='changePrice')
            input(type="hidden" name="_csrf" value=token)
            input(type="submit", name="submit", value="change")
        div(class='underscore')